<h1>Create a Song</h1>
<%= form_for @song  do |f| %>
  <div id='field'>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div id='field'>
    <%= f.label :artist_name, "Artist"%>
    <%= f.text_field :artist_name %>
  </div>
  <div id='field'>
    <%= f.label :genre_id, 'Genre'%>
    <%= f.text_field :genre_id , list: 'genre_autocomplete'%>
    <datalist id='genre_autocomplete'>
      <% Genre.all.each do |genre| %>
        <option value="<%= genre.name %>">
        <% end %>
      </datalist>
    </div>
    <br>
    <div id='field'>
      <%= f.label :notes_1, "Notes" %>
      <input class='song_notes_1' id="song_notes_1" name="song[note_ids][]" type="text"> <br>
      <%= f.label :notes_2, "Notes" %>
      <input class="song_notes_2" id="song_notes_2" name="song[note_ids][]" type="text"><br>
    </div>
    <%= f.submit %>
  <%end%>
